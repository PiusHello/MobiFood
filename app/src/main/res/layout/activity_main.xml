<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeScreen"
        android:layout_marginTop="10dp"
        android:text="Start buying now"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/WelcomeScreen"
        android:id="@+id/WelcomeScreenImage"
        android:background="@mipmap/ic_back1"/>

    <Button
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WelcomeScreenImage"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUp"
        android:text="Register"
        android:layout_below="@id/signIn"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorWhite"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Developed by iPius"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/developer"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:textStyle="italic"/>

</RelativeLayout>